{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": ["off", "windows"],
        "comma-dangle": ["error", {
            "imports": "never"
        }],
        "newline-per-chained-call": "warn",
        "indent": [
            "error",
            2
        ],
        "class-methods-use-this": "warn",
        "max-len": "warn"
    }
}
